@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@model SEC_UserModel
<!-- BEGIN LOGO -->
<div class="logo container  my-3 backgroundColorBlue">
    <div class="text-center">
        <h2 class="my-3">Address Book</h2>
    </div>
    <div class="content container backgroundColorBlueLite w-50">

        <form class="form-group mb-3" method="post" asp-controller="SEC_User" asp-action="Login">
            <h3 class="form-title text-center font-green">Sign In</h3>

            @if (TempData["Error"]!=null)
            {
                <div class="text-danger">@Html.Raw(TempData["Error"]) </div>
            }
        
            <div class="form-group">

                <label class="form-label">Username</label>
                <input class="form-control" type="text" asp-for="UserName" placeholder="Enter Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label class="form-label">Password</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" asp-for="Password" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-actions text-center">
                <button type="submit" class="loginBtn my-3 rounded-3">Login</button>
            </div>

        </form>

        <form class="form-group mb-3" asp-controller="SEC_User" asp-action="SignUp">
            <div class="form-actions text-center">
                <h5>Don't Have Account ?</h5>
                <button class="signup my-3 rounded-3">Sign Up</button>
            </div>
        </form>


        <!-- END LOGIN FORM -->
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
