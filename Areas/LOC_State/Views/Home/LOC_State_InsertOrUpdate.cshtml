@{
    ViewData["Title"] = "InsertOrUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddressBook.Areas.LOC_State.Models.LOC_StateModel;

<div class="container w-50 my-5">
    <form method="post" asp-area="LOC_State" asp-controller="Home" asp-action="Save">

        @Html.HiddenFor(x=>x.StateID)

        <div class="mb-3">
            <label class="form-label">Enter State Name</label>
            <input type="text" class="form-control my-2" asp-for="StateName" placeholder="State Name" />
            <span asp-validation-for="StateName" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label class="form-label">Enter State Code</label>
            <input type="text" class="form-control my-2" asp-for="StateCode" placeholder="State Code" />
             <span asp-validation-for="StateCode" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Enter Country ID</label>
            <Select type="text" class="form-control my-2" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                <option value="">Select Country</option>
            </Select>
            <span asp-validation-for="CountryID" class="text-danger"></span>
        </div>

        @Html.HiddenFor(x=>x.CreationDate)

        @Html.HiddenFor(x=>x.ModificationDate)

        <input type="submit" class="btn btn-outline-success" value="Save" />

        <a class="btn btn-outline-danger mx-5" asp-area="LOC_State" asp-controller="Home" asp-action="Index">Cancel</a>

    </form>
</div>